<resources>

    <!-- Base application theme. -->
    <!-- Base Light theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryText">@color/colorPrimaryText</item>
        <item name="colorSecondaryText">@color/colorSecondaryText</item>
        <item name="colorContainer">@color/colorContainer</item>
        <item name="colorContainerSecondary">@color/colorContainerSecondary</item>
        <item name="colorNavigationBottomBackground">@color/colorNavigationBottomBackground</item>
        <item name="colorBookNowBackground">@color/colorBookNowBackground</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Design.BottomSheetDialog</item>
        <item name="android:windowLightNavigationBar">true</item>


    </style>


    <!-- Base Light theme. -->

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryText">@color/colorPrimaryTextNight</item>
        <item name="colorSecondaryText">@color/colorSecondaryTextNight</item>
        <item name="colorContainer">@color/colorContainerNight</item>
        <item name="colorContainerSecondary">@color/colorContainerSecondaryNight</item>
        <item name="colorNavigationBottomBackground">@color/colorNavigationBottomBackgroundNight</item>
        <item name="colorBookNowBackground">@color/colorBookNowBackgroundNight</item>
        <item name="android:windowBackground">@android:color/black</item>


    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>


    </style>


    <style name="TabTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/normal</item>
        <item name="android:includeFontPadding">false</item>

    </style>


